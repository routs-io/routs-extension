{
  "name": "Routs Extension",
  "description": "Routs Extension",
  "version": "1.0.0",
  "version_name": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./scripts/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["./scripts/content-script/index.js"],
      "matches": [
        "http://localhost:3620/*",
        "https://app.routs.io/*"
      ],
      "run_at": "document_end"
    }
  ],
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/content-script/injectedScript.js"
      ],
      "matches": [
        "http://localhost:3620/*",
        "https://app.routs.io/*"
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:3620/*",
      "https://app.routs.io/*"
    ]
  },
  "icons": {
    "16": "./icons/icon48.png",
    "24": "./icons/icon48.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  }
}
